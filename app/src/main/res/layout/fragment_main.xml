<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/smooth_bottom_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/smooth_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:backgroundColor="@color/white"
        app:cornerRadius="25dp"
        app:duration="400"
        app:iconSize="22dp"
        app:iconTint="#CCF0D7"
        app:iconTintActive="@color/white"
        app:indicatorColor="#00B238"
        app:indicatorRadius="20dp"
        app:itemPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintTop_toBottomOf="@id/view_pager_main"
        app:menu="@menu/smooth_bottom_menu"
        app:sideMargins="3dp"
        app:textSize="13sp" />

</androidx.constraintlayout.widget.ConstraintLayout>